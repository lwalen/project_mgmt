<% if current_user %>
	<%= current_user.name %>
	<%= link_to 'Log Out', logout_path %>
<% else %>
	<%= link_to 'Log in with Facebook', '/auth/facebook' %>
<% end %>


<% if current_user %>

	<p><%= link_to "Invite Facebook Friends", "#", id: "invite_fb_friends" %></p>
	<div id="fb-root"></div>

		<script src="http://connect.facebook.net/en_US/all.js"></script>

		<script>
			$(function() {

				$('a#invite_fb_friends').click(function() {
					FB.init({
						appId:  '503870553012195',
						cookie: false,
						status: true
					});

					FB.ui({ method: 'apprequests', message: '<%= current_user.name %> has invited you to join Project Mgmt'});
				});
			});
		</script>

<% end %>
