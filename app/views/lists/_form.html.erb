
<% if @list.errors.any? %>
	<% @list.errors.full_messages.each do |msg| %>
		<div class="alert alert-error"><%= msg %></div>
	<% end %>
<% end %>


<%= form_for @list do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :tasks %>
	<%= f.collection_select :tasks, 
		:tasks,
		Tasks.all,
		:id %>

	<br/>
	<%= f.submit class: 'btn btn-info' %>

<% end %>
