<%= link_to 'New List', new_list_path, class: 'btn btn-info' %>
<br/>
<br/>
<% @lists.each do |list| %>
	<div>
		<h2><%= link_to list.name, list %></h2>
		<p class="pull-right"><%= link_to 'delete', list,
			confirm: 'Are you sure you wish to delete this list?',
			method: :delete %>
		</p>
		<table class="table">
			<% list.tasks.each do |task| %>
				<tr>
					<td><%= task.content %></td>
					<td><%= task.date %></td>
					<td><%= task.user %></td>
				</tr>
			<% end %>
		</table>
	</div>
<% end %>
